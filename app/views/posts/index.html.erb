<p id="notice"><%= notice %></p>

<div class="page-header"> 
  <h1>All of the PTA updates</h1>
</div> 

<%= link_to "Post a new update for the PTA", new_post_path, class: "btn btn-primary" %>

<% @posts.each do |post| %> 
<div class="post"> 
  <strong><%= post.name %></strong> 
  <p><%= post.content %></p> 
  <div class="meta"> 
   <%= link_to time_ago_in_words(post.created_at) + " ago", post %>  | 
   <span class="admin"> 
     <%= link_to "Edit", edit_post_path(post) %> | 
     <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this post"}%>
   </span>
  </div>
</div>
<% end %>